{
  "$schema": "https://json.schemastore.org/turbo",
  "tasks": {
    "build": {  
      "outputs": ["dist/**", ".next/**"] 
    },
    "dev": {
      "cache": false, 
      "persistent": true,
    },
    "test": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "cache": false
    }
  }
}